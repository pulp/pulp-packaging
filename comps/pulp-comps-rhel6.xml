<comps>
  <group>
    <id>pulp-consumer</id>
    <name>Pulp Consumer</name>
    <description>
        Pulp consumer client and agent including all extensions and handlers but without broker
        specific packages.
    </description>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq type="mandatory">pulp-consumer-client</packagereq>
      <packagereq type="mandatory">python-pulp-client-lib</packagereq>
      <packagereq type="mandatory">python-pulp-bindings</packagereq>
      <packagereq type="mandatory">python-pulp-common</packagereq>
      <packagereq type="default">pulp-rpm-consumer-extensions</packagereq>
      <packagereq type="default">pulp-puppet-consumer-extensions</packagereq>
      <packagereq type="default">pulp-agent</packagereq>
      <packagereq type="default">python-pulp-agent-lib</packagereq>
      <packagereq type="default">python-pulp-rpm-common</packagereq>
      <packagereq type="default">pulp-rpm-handlers</packagereq>
      <packagereq type="default">pulp-rpm-yumplugins</packagereq>
      <packagereq type="default">python-pulp-puppet-common</packagereq>
      <packagereq type="default">pulp-puppet-handlers</packagereq>
      <packagereq type="default">gofer</packagereq>
      <packagereq type="default">gofer-tools</packagereq>
      <packagereq type="default">python-gofer</packagereq>
      <packagereq type="default">python-gofer-amqp</packagereq>
      <packagereq type="default">python-gofer-proton</packagereq>
      <packagereq type="default">python-gofer-qpid</packagereq>
      <packagereq type="default">python-isodate</packagereq>
    </packagelist>
  </group>
  <group>
    <id>pulp-consumer-qpid</id>
    <name>Pulp Consumer and Qpid Client Packages</name>
    <description>
        Pulp consumer client and agent including all extensions, handlers, and Qpid specific client
        packages.
    </description>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq type="mandatory">pulp-consumer-client</packagereq>
      <packagereq type="mandatory">python-pulp-client-lib</packagereq>
      <packagereq type="mandatory">python-pulp-bindings</packagereq>
      <packagereq type="default">pulp-rpm-consumer-extensions</packagereq>
      <packagereq type="default">pulp-puppet-consumer-extensions</packagereq>
      <packagereq type="default">python-pulp-agent-lib</packagereq>
      <packagereq type="default">pulp-agent</packagereq>
      <packagereq type="default">python-pulp-agent-lib</packagereq>
      <packagereq type="default">pulp-rpm-handlers</packagereq>
      <packagereq type="default">pulp-rpm-yumplugins</packagereq>
      <packagereq type="default">pulp-puppet-handlers</packagereq>
      <packagereq type="default">python-gofer-qpid</packagereq>
    </packagelist>
  </group>
  <group>
    <id>pulp-development</id>
    <name>Pulp Development</name>
    <description>
      Pulp development Packages.
    </description>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq type="mandatory">python-pulp-devel</packagereq>
    </packagelist>
  </group>
</comps>
