<comps>
  <group>
    <id>pulp-server</id>
    <name>Pulp Server</name>
    <description>
        Pulp server including all plugins, but without broker specific packages.
    </description>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq type="mandatory">pulp-server</packagereq>
      <packagereq type="mandatory">python-pulp-common</packagereq>
      <packagereq type="default">python-pulp-oid_validation</packagereq>

      <packagereq type="default">pulp-rpm-plugins</packagereq>
      <packagereq type="default">python-pulp-rpm-common</packagereq>
      <packagereq type="default">python-pulp-repoauth</packagereq>

      <packagereq type="default">pulp-puppet-plugins</packagereq>
      <packagereq type="default">python-pulp-puppet-common</packagereq>
      <packagereq type="default">pulp-puppet-tools</packagereq>

      <packagereq type="default">pulp-docker-plugins</packagereq>
      <packagereq type="default">python-pulp-docker-common</packagereq>
      <packagereq type="default">python-crane</packagereq>

      <packagereq type="default">pulp-ostree-plugins</packagereq>
      <packagereq type="default">python-pulp-ostree-common</packagereq>

      <packagereq type="default">pulp-python-plugins</packagereq>
      <packagereq type="default">python-pulp-python-common</packagereq>
      <packagereq type="default">pulp-selinux</packagereq>
    </packagelist>
  </group>
  <group>
    <id>pulp-server-qpid</id>
    <name>Pulp Server and Qpid Client Packages</name>
    <description>
        Pulp server including all plugins and Qpid specific client packages.
    </description>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq type="mandatory">pulp-server</packagereq>
      <packagereq type="mandatory">python-pulp-common</packagereq>
      <packagereq type="default">python-pulp-oid_validation</packagereq>

      <packagereq type="default">pulp-rpm-plugins</packagereq>
      <packagereq type="default">python-pulp-rpm-common</packagereq>
      <packagereq type="default">python-pulp-repoauth</packagereq>

      <packagereq type="default">pulp-puppet-plugins</packagereq>
      <packagereq type="default">python-pulp-puppet-common</packagereq>
      <packagereq type="default">pulp-puppet-tools</packagereq>

      <packagereq type="default">pulp-docker-plugins</packagereq>
      <packagereq type="default">python-pulp-docker-common</packagereq>
      <packagereq type="default">python-crane</packagereq>

      <packagereq type="default">pulp-ostree-plugins</packagereq>
      <packagereq type="default">python-pulp-ostree-common</packagereq>

      <packagereq type="default">pulp-python-plugins</packagereq>
      <packagereq type="default">python-pulp-python-common</packagereq>

      <packagereq type="default">pulp-selinux</packagereq>
      <packagereq type="default">python-gofer-qpid</packagereq>
      <packagereq type="default">python-qpid</packagereq>
      <packagereq type="default">python-kombu</packagereq>
      <packagereq type="default">qpid-tools</packagereq>
    </packagelist>
  </group>
  <group>
    <id>pulp-streamer</id>
    <name>Pulp Streamer</name>
    <description>Pulp Streamer</description>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq type="mandatory">python-pulp-streamer</packagereq>
    </packagelist>
  </group>
  <group>
    <id>pulp-admin</id>
    <name>Pulp Admin</name>
    <description>Pulp admin client including all extensions.</description>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq type="mandatory">pulp-admin-client</packagereq>
      <packagereq type="mandatory">python-pulp-client-lib</packagereq>
      <packagereq type="mandatory">python-pulp-bindings</packagereq>
      <packagereq type="default">pulp-rpm-admin-extensions</packagereq>
      <packagereq type="default">pulp-puppet-admin-extensions</packagereq>
      <packagereq type="default">pulp-docker-admin-extensions</packagereq>
      <packagereq type="default">pulp-python-admin-extensions</packagereq>
      <packagereq type="default">pulp-ostree-admin-extensions</packagereq>
    </packagelist>
  </group>
  <group>
    <id>pulp-consumer</id>
    <name>Pulp Consumer</name>
    <description>
        Pulp consumer client and agent including all extensions and handlers but without broker
        specific packages.
    </description>
    <uservisible>true</uservisible>
    <packagelist>
      <packagereq type="mandatory">pulp-consumer-client</packagereq>
      <packagereq type="mandatory">python-pulp-client-lib</packagereq>
      <packagereq type="mandatory">python-pulp-bindings</packagereq>
